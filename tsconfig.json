{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist", // Specify the output directory
        "rootDir": "./src" // Specify the source directory
    },
    "include": [
        "src/**/*.ts",
        "src/server.ts"
    ],
    "exclude": [
        "node_modules/"
    ]
}